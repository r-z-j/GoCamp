<% layout('layouts/boilerplate')%>
<h1>Edit  Campground</h1>
<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
    <div>
        <label for="title">Title</label>
        <input id="title" type="text" name="campground[title]" value="<%= campground.title %>">
    </div>
    <div>
        <label for="location">Location</label>
        <input id="location" type="location" name="campground[location]" value="<%= campground.location %>">
    </div>
    <button>Update Campground</button>
</form>
<a href="/campgrounds/<%= campground._id %>">Back to Campgrounds</a>
