<% layout('layouts/boilerplate')%>

<div class="row">
    <div class="col-6 offset-3">
        <div class="card" style="">
            <img src="<%= campground.image %>" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title"><%= campground.title %></h5>
                <p class="card-text"><%= campground.description %></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><%= campground.location %></li>
                <li class="list-group-item">$<%= campground.price %> per night</li>
            </ul>
            <div class="card-body">
                <a class="card-link btn btn-secondary" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                <form class="d-inline mx-2" action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form> 
                <a class="card-link" href="/campgrounds">All Campgrounds</a>
            </div>
        </div>
    </div>
</div>
